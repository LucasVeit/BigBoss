<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bigboss" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/foto_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BigBoss" >
        <activity
            android:name=".Activity.boxExercicioConcluido"
            android:exported="true" />
        <activity
            android:name=".Activity.BoxExercicioAndamento"
            android:exported="true" />
        <activity
            android:name=".Activity.telaPerfil"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.telaInfoExercicio"
            android:parentActivityName=".Activity.telaInicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.telaAdicionarExercicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.telaEditarExercicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TelaPerguntasFrequente"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.telaConfiguracao"
            android:parentActivityName=".Activity.telaInicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.telaInicio"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>